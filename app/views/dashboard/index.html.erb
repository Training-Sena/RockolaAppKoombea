<div class="float-left" style="margin:20px; width:30%;" id="response"></div>

<div class="modal fade" id="videoModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title text-center"></h4>
        <iframe width="100%" height="350" src="" allow="autoplay; encrypted-media"></iframe>
        <% if user_signed_in? %>
          <%= form_for :song, remote: true, url: root_path, html: {id: 'add_song_to_playlist_form'} do |f| %>
            <%= f.select :playlist_id, Playlist.all.collect{ |playlist| [playlist.name, playlist.id] }, {prompt: 'Please select'} , {:class=>"playlist_created"} %>
            <%= f.hidden_field :title %>
            <%= f.hidden_field :videoId %>
            <%= f.submit "Add to playlist", class: "btn btn-info" %>
          <% end %>
        <% end %>

        <span id="message_result_modal" class="badge badge-danger" style="display: none;"></span>

        <% if user_signed_in? %>
          <button type="button" class="btn btn-info float-right" data-toggle="modal" data-target="#modalplaylist">Create playlist</button>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="modalplaylist" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= form_for :playlist, remote: true, url: playlists_path do |f| %>
          <h5>Create your playlist</h5>
          <%= f.label :name, "Name:" %>
          <%= f.text_field :name %>
          <%= f.submit "Create playlist", class: "btn btn-success" %>
          <% end %>
      </div>
    </div>
  </div>
</div>

<div class="float-right " style="width:50%; margin:0px; padding:0px;">
  <iframe class="float-right" width="100%" height="350" src="" allow="autoplay; encrypted-media" frameborder="0" id="myname" name="myname"></iframe> <br>
  <div id="js-playlist-content"></div>
</div>
</nav>
